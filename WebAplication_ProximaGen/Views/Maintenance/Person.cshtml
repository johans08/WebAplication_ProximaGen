
@{
    ViewBag.Title = "Person";
}

@using WebAplication_ProximaGen.Logica

@model WebAplication_ProximaGen.Models.PersonaUsuario


<section class="pc-container">
    <div class="pcoded-content">
        <div class="page-header">
            <div class="page-block">
                <div class="row align-items-center">
                    <div class="col-md-12">
                        <div class="page-header-title">
                            <h5 class="m-b-10">Registros</h5>
                        </div>
                        <ul class="breadcrumb">
                            <li class="breadcrumb-item"><a href="index.html">Inicio</a></li>
                            <li class="breadcrumb-item"><a href="#!">Registros</a></li>
                            <li class="breadcrumb-item">Usuarios</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <h5>Registrar Usuario</h5>
                    </div>
                    <div class="card-body">
                        <h5 class="mt-5">Información Personal</h5>
                        <hr>
                        @using (Html.BeginForm("CreatePerson", "Maintenance", FormMethod.Post))
                        {
                            <form>
                                <!--Llamo a la funcion-->
                                <div class="row">
                                    <div class="form-group col-md-6">
                                        @Html.LabelFor(model => model.persona.cedula, "Cédula", new { @class = "form-label" })
                                        @Html.TextBoxFor(model => model.persona.cedula, new { @class = "form-control", placeholder = "Cédula", @id = "cedulaInput" })

                                        @*<label class="form-label" for="inputEmail4">Cedula</label>
                                            <input type="number" class="form-control" id="inputEmail4" placeholder="Cedula">*@
                                    </div>
                                    <div class="form-group col-md-6">
                                        @Html.LabelFor(model => model.persona.nombre, "Nombre", new { @class = "form-label" })
                                        @Html.TextBoxFor(model => model.persona.nombre, new { @class = "form-control", placeholder = "Nombre", @id = "nombreInput" })

                                        @*<label class="form-label" for="inputEmail4">Nombre</label>
                                            <input type="email" class="form-control" id="inputEmail4" placeholder="Nombre">*@
                                    </div>
                                    <div class="form-group col-md-6">
                                        @Html.LabelFor(model => model.persona.apellido, "Primer Apellido", new { @class = "form-label" })
                                        @Html.TextBoxFor(model => model.persona.apellido, new { @class = "form-control", placeholder = "Primer Apellido", @id = "apellidoInput" })
                                        @*<label class="form-label" for="inputPassword4">Apellido</label>
                                        <input type="password" class="form-control" id="inputPassword4" placeholder="Apellido">*@
                                    </div>
                                    <div class="form-group col-md-6">
                                        @Html.LabelFor(model => model.persona.apellido2, "Segundo Apellido", new { @class = "form-label" })
                                        @Html.TextBoxFor(model => model.persona.apellido2, new { @class = "form-control", placeholder = "Segundo Apellido", @id = "apellido2Input" })
                                        @*<label class="form-label" for="inputPassword4">Segundo Apellido</label>
                                        <input type="password" class="form-control" id="inputPassword4" placeholder="Segundo Apellido">*@
                                    </div>
                                    <div class="form-group col-md-6">
                                        @Html.LabelFor(model => model.persona.fechaNacimiento, "Fecha nacimiento", new { @class = "form-label" })
                                        @Html.TextBoxFor(model => model.persona.fechaNacimiento, new { @class = "form-control", placeholder = "Fecha nacimiento", @id = "fechaNacimientoInput", @type= "date" })
                                        @*<label class="form-label" for="inputAddress">Fecha de Nacimiento</label>
                                        <input type="date" class="form-control" id="inputAddress" placeholder="Fecha de nacimiento">*@
                                    </div>
                                    <div class="form-group col-md-6">
                                        @Html.LabelFor(model => model.persona.Generos_idGenero, "Género", new { @class = "form-label" })
                                        @Html.DropDownListFor(model => model.persona.Generos_idGenero, new List<SelectListItem>
                                        {
                                            new SelectListItem { Text = "Masculino", Value = "Masculino" },
                                            new SelectListItem { Text = "Femenino", Value = "Femenino" }
                                        }, new { @class = "form-control", id = "inputState" })

                                    </div>
                                    <div class="form-group col-md-6">
                                        @Html.LabelFor(model => model.contacto.TipoContactos_idTipoContacto, "Tipo contacto", new { @class = "form-label" })
                                        @if (TempData["listaTipoContacto"] != null)
                                        {
                                            <select name="TipoContactos_idTipoContacto" id="TipoContactos_idTipoContacto" class="form-control">
                                                @foreach (var persona in TempData["listaTipoContacto"] as List<WebAplication_ProximaGen.Models.Contactos>)
                                                {
                                                    <option class="form-control" value="@persona.TipoContactos_idTipoContacto">@persona.descripcionContacto</option>
                                                }
                                            </select>
                                        }
                                    </div>
                                    <div class="form-group col-md-6">
                                        <label class="form-label" for="inputPassword4">Numero</label>
                                        <input type="number" class="form-control" id="inputPassword4" placeholder="Numero">
                                    </div>
                                </div>
                                <h5 class="mt-5">Informacion Usuario</h5>
                                <hr>
                                <div class="row">
                                    <div class="form-group col-md-6">
                                        <label class="form-label" for="inputEmail4">Usuario</label>
                                        <input type="email" class="form-control" id="inputEmail4" placeholder="Usuario">
                                    </div>
                                    <div class="form-group col-md-6">
                                        <label class="form-label" for="inputPassword4">Correo electronico</label>
                                        <input type="password" class="form-control" id="inputPassword4" placeholder="gmail.com">
                                    </div>
                                    <div class="form-group col-md-6">
                                        <label class="form-label" for="inputPassword4">Contraseña</label>
                                        <div class="input-group">
                                            <input type="password" class="form-control" id="inputPassword4" placeholder="Contraseña"><button class="btn btn-outline-primary" type="color"><i class="far fa-eye"></i></button>
                                        </div>
                                    </div>

                                    <div class="form-group col-md-6">
                                        <label class="form-label" for="inputState">Tipo de usuario</label>
                                        <select id="inputState" class="form-control">
                                            <option selected>Administrador</option>
                                            <option>Profesor</option>
                                            <option>Estudiante</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="text-center">
                                    <button type="submit" class="btn btn-primary mx-auto">Agregar Usuario</button>
                                </div>
                            </form>
                        }
                    </div>
                </div>
            </div>
        </div>


    </div>
</section>